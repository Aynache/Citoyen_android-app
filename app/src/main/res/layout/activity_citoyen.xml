<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitoyenActivity">

    <FrameLayout
        android:id="@+id/fragment_container_citoyen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/fragment_container_citoyen"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_reports"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report"
            android:background="@android:color/holo_blue_dark"/> <!-- Example background color -->

        <Button
            android:id="@+id/button_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Map"
            android:background="@android:color/holo_green_dark"/> <!-- Example background color -->

        <Button
            android:id="@+id/button_profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profil"
            android:background="@android:color/holo_red_dark"/> <!-- Example background color -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
